<%= form_with model: @user, local: true do |form| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this user from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :login %>
    <%= form.label @user.login %><br>
  </p>

  <p>
    <%= form.label :name %>
    <%= form.label @user.name %><br>
  </p>

  <p>
    <%= form.label :type %><br>
    <%= form.select(:type, options_for_select([['Friend', 'Friend'], ['Enemy', 'Enemy'], ['Neutrality', 'Neutrality']], @user.type)) %>
  </p>
  
  <p>
    <%= form.submit %>
  </p>

<% end %>